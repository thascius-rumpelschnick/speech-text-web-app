{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "tsx": true
        }
    },
    "overrides": [
        {
            "files": ["assets/tsx/*/**"]
        }
    ],
    "ignorePatterns": ["/node_modules"],
    "plugins": ["@stylistic", "react", "@typescript-eslint"],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "rules": {
        "@stylistic/array-bracket-spacing": ["error", "always"],
        "@stylistic/object-curly-spacing": ["error", "always"],
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-empty": "warn",
        "no-cond-assign": ["error", "always"],
        "for-direction": "off"
    }
}
